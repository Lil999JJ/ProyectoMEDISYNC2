# Ejemplo de configuración para MEDISYNC
# Copiar a .env y configurar los valores reales

# Configuración de la aplicación
APP_NAME=MEDISYNC
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medisync
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Seguridad
SECRET_KEY=your_secret_key_here_use_generate_secure_key
PASSWORD_MIN_LENGTH=8
SESSION_EXPIRE_HOURS=24
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/medisync.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Tkinter GUI (opcional)
GUI_THEME=default
GUI_GEOMETRY=1200x800

# API REST (para futura implementación)
API_HOST=localhost
API_PORT=8000
API_WORKERS=4

# Email (para notificaciones futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_TLS=true

# Backup automático
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Monitoreo
ENABLE_METRICS=false
METRICS_PORT=9090
